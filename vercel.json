{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "env": {
    "STATS_PASSWORD": "@stats-password",
    "KV_REST_API_URL": "@kv-rest-api-url",
    "KV_REST_API_TOKEN": "@kv-rest-api-token"
  },
  "build": {
    "env": {
      "STATS_PASSWORD": "@stats-password",
      "KV_REST_API_URL": "@kv-rest-api-url",
      "KV_REST_API_TOKEN": "@kv-rest-api-token"
    }
  }
}
